{
    "name": "react-all-vite-template",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "author": "sutton",
    "description": "React is a JavaScript library for building user interfaces.",
    "homepage": "https://github.com/Ioome/react-all-vite-template",
    "bugs": "https://github.com/Ioome/react-all-vite-template/issues",
    "keywords": [
        "emotion",
        "axios",
        "dayjs",
        "mockjs",
        "framework",
        "frontend",
        "react",
        "react-component",
        "ui"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "test": "jest",
        "pre-check": "npm run lint",
        "postinstall": "husky install",
        "dev:local": "vite --mode _local",
        "dev:test": "vite --mode test",
        "build:beta": "vite build --mode beta",
        "build:release": "vite build --mode release"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Ioome/react-all-vite-template.git",
        "directory": "packages/react"
    },
    "dependencies": {
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@mantine/core": "^6.0.13",
        "@mantine/hooks": "^6.0.13",
        "@mui/material": "^5.13.3",
        "axios": "^1.4.0",
        "commitizen": "^4.3.0",
        "dayjs": "^1.11.7",
        "mockjs": "^1.1.0",
        "prettier": "^2.8.8",
        "prop-types": "^15.8.1",
        "qs": "^6.11.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-is": "^18.2.0",
        "recharts": "^2.6.2",
        "styled-components": "^5.3.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.5",
        "@commitlint/config-conventional": "^17.6.5",
        "@types/node": "^20.2.5",
        "@types/qs": "^6.9.7",
        "@types/react": "^18.0.37",
        "@types/react-dom": "^18.0.11",
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitejs/plugin-react": "^4.0.0",
        "cz-customizable": "^7.0.0",
        "eslint": "^8.38.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "rollup-plugin-visualizer": "^5.9.0",
        "typescript": "^5.0.2",
        "vite": "^4.3.9"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": "./.cz-config.cjs"
        }
    }
}